{
  "compilerOptions": {
    "lib": ["es2017","dom"],
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./out-tsc",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "js/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
